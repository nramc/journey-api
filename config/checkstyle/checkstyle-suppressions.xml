<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>

    <!-- Suppress all Missing Javadoc checks -->
    <suppress checks="MissingJavadoc.*"/>

    <!-- Allow Abbreviated method and class names since sometimes abbreviation provides better context   -->
    <suppress checks="AbbreviationAsWordInName"/>

</suppressions>
